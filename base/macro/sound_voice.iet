///////////////////////////////////////////////////////////
//
// SE(効果音)
//
///////////////////////////////////////////////////////////

// --------------------------------------------------------
// ■ SE再生
//    ・ループしない
//    ・スキップ時も再生する
// 
// @param
//   file  読み込むファイルの名前（拡張子省略可能）
//   time  フェードインをかける（ミリ秒）
// 
// @HowToUse
//   ●開始
//     [se file="ファイル名" time="フェードインをかける時間"]
//   ●終了
//     [/sestop]
// --------------------------------------------------------
*se
[seplay id="se" file="$g.soundpath + file" time="$time" loop="0" skippable="0"]
[return]

// --------------------------------------------------------
// ■ SE・ボイス音量調節
//    ボイスの音量も変更されます。
//    ボイス別の調整は、voice1_vol・voice2_volをご利用ください
// 
// @param
//   vol  音量(0 〜 1000)
// 
// @HowToUse
//   [se_vol vol="100"]
// --------------------------------------------------------
*se_vol
[var name="g.sevol" data="$s.sevol"]
[var name="s.sevol" data="$vol"]
[return]

// --------------------------------------------------------
// ■ SE・ボイス音量をもとに戻す
//    ボイスの音量も元に戻ります
//    ボイス別の調整は、voice1_back・voice2_backをご利用ください
// 
// @param
//   なし
// 
// @HowToUse
//   [se_back]
// --------------------------------------------------------
*se_back
[var name="s.sevol" data="$g.sevol"]
[return]

///////////////////////////////////////////////////////////
//
// ボイス
//
///////////////////////////////////////////////////////////

// --------------------------------------------------------
// ■ 音声再生(通常)
//    ・ループしない
//    ・スキップ時は再生しない
// 
// @param
//   file  読み込むファイルの名前（拡張子省略可能）
// 
// @HowToUse
//   ●開始
//     [voice1 file="ファイル名"]
//     [voice2 file="ファイル名"]
//   ●終了
//     [/voice]
//     ※[rp]でも終了します
// --------------------------------------------------------
*voice1
[voice id="voice1" file="$g.voicepath + file" skippable="1"]
[return]

*voice2
[voice id="voice2" file="$g.voicepath + file" skippable="1"]
[return]

// --------------------------------------------------------
// ■ 音声再生(フェードあり)
//    ・ループしない
//    ・スキップ時は再生しない
// 
// @param
//   file  読み込むファイルの名前（拡張子省略可能）
//   time  フェードインをかける（ミリ秒）
// 
// @HowToUse
//   ●開始
//     [voice_fade1 file="ファイル名" time="フェードインをかける時間"]
//     [voice_fade2 file="ファイル名" time="フェードインをかける時間"]
//   ●終了
//     [/voice]
//     ※[rp]でも終了します
// --------------------------------------------------------
*voice_fade1
[voice id="voice1" file="$g.voicepath + file" time="$time" skippable="1"]
[return]

*voice_fade2
[voice id="voice2" file="$g.voicepath + file" time="$time" skippable="1"]
[return]

// --------------------------------------------------------
// ■ ボイスのみ音量調節
//    全ボイスの音量を変更する場合はSEの音声調節を使用してください
// 
// @param
//   vol  音量(0 〜 1000)
// 
// @HowToUse
//   [voice1_vol vol="100"]
//   [voice2_vol vol="100"]
// --------------------------------------------------------
*voice1_vol
[var name="g.voice1_vol" data="$s.segain.voice1"]
[var name="s.segain.voice1" data="$vol"]
[return]

*voice2_vol
[var name="g.voice2_vol" data="$s.segain.voice2"]
[var name="s.segain.voice2" data="$vol"]
[return]

// --------------------------------------------------------
// ■ ボイスのみ音量をもとに戻す
//    全ボイスの音量を変更する場合はSEの音声調節を使用してください
// 
// @param
//   なし
// 
// @HowToUse
//   [voice1_back]
//   [voice2_back]
// --------------------------------------------------------
*voice1_back
[var name="s.segain.voice1" data="$g.voice1_vol"]
[return]

*voice2_back
[var name="s.segain.voice2" data="$g.voice2_vol"]
[return]

///////////////////////////////////////////////////////////
//
// BGM
//
///////////////////////////////////////////////////////////

// --------------------------------------------------------
// ■ BGM再生
//    ・ループしない
//    ・スキップ時は再生しない
// 
// @param
//   file  読み込むファイルの名前（拡張子省略可能）
//   
// 
// @HowToUse
//   ●開始
//     [bgm file="ファイル名" time="フェードインをかける時間"]
//   ●終了
//     [/sstop]
// --------------------------------------------------------
*bgm
[splay file="$g.soundpath + file" time="$time" loop="1"]
[return]

// --------------------------------------------------------
// ■ BGM停止
//    sstopが見づらかったから作っただけ
//
// @param
//   time  フェードアウトをかける（ミリ秒）
// 
// @HowToUse
//   [bgm_stop time="フェードアウトをかける時間"]
// --------------------------------------------------------
*bgm_stop
[sstop time="$time"]
[return]

// --------------------------------------------------------
// ■ BGM音量調節
// 
// @param
//   vol  音量(0 〜 1000)
// 
// @HowToUse
//   [bgm_vol vol="100"]
// --------------------------------------------------------
*bgm_vol
[var name="g.bgmvol" data="$s.bgmvol"]
[var name="s.bgmvol" data="$vol"]
[return]

// --------------------------------------------------------
// ■ BGM音量をもとに戻す
// 
// @param
//   なし
// 
// @HowToUse
//   [bgm_back]
// --------------------------------------------------------
*bgm_back
[var name="s.bgmvol" data="$g.bgmvol"]
[return]
